        <PasswordBox x:Name="password_reg_Copy" HorizontalAlignment="Left" Margin="52,121,0,0"  VerticalAlignment="Top" Height="19" Width="194" Background="White" />
        <Button x:Name="zaregistrirovatsia" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="71,154,0,0" VerticalAlignment="Top" Width="159" Click="zaregistrirovatsia_Click"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="126,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" Margin="122,52,116,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Label Content="Повторите пароль" Margin="93,97,85,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="111"/>

    </Grid>
</Window>
