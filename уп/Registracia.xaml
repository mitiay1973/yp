        <TextBox x:Name="login_reg" HorizontalAlignment="Left" Margin="52,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="19" Width="194" Background="White" TextChanged="login_reg_TextChanged"/>
